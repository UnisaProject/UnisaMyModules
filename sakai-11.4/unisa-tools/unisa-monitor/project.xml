<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<name>Unisa Monitor Tool</name>
	<groupId>sakaiproject</groupId>
	<id>unisa-monitor</id>
	<currentVersion>2.3.0</currentVersion>
	<organization>
