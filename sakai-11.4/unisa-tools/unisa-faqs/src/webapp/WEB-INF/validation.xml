<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
   <formset>
    
		<form name="faqContentForm">
			<field property="content.question" depends="required">
			    <arg0 key="faq.questiontitle"/>
			</field>

			<field property="content.answer" depends="required">
			    <arg0 key="faq.answer"/>
			</field>
		</form>	
		
		<form name="faqCategoryForm">
			<field property="category.description" depends="required">
			    <arg0 key="faq.column.category"/>
			</field>

		</form>	
			
	</formset>
	
</form-validation>

