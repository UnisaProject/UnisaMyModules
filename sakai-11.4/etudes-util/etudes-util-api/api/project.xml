<project>
	<pomVersion>3</pomVersion>
	<extend>../../../project.xml</extend>
	<name>etudes-util-api</name>
	<groupId>etudes</groupId>
	<id>etudes-util-api</id>
	<currentVersion>1.0</currentVersion>
	<organization>
		<name>Etudes, Inc.</name>
		<url>http://etudes.org/archives</url>
	</organization>
	<inceptionYear>2009</inceptionYear>

	<properties>
		<!-- deploy as a jar -->
		<deploy.type>jar</deploy.type>
		<!-- deploy to "shared", "common" or "server" -->
		<deploy.target>shared</deploy.target>
	</properties>

	<dependencies>
		<dependency>
			<groupId>net.sourceforge.htmlcleaner</groupId>
			<artifactId>htmlcleaner</artifactId>
			<version>2.2</version>
			<properties>
				<!-- deploy dependency jar to "shared", "common" or "server" -->
				<deploy.target>shared</deploy.target>
			</properties>
		</dependency>

 		<dependency>
			<groupId>jtidy</groupId>
			<artifactId>jtidy</artifactId>
			<version>r938</version>
			<properties>
				deploy dependency jar to "shared", "common" or "server"
				<deploy.target>shared</deploy.target>
			</properties>
 		</dependency>
 
	</dependencies>

	<build>

		<sourceDirectory>src/java</sourceDirectory>

	</build>

</project>
