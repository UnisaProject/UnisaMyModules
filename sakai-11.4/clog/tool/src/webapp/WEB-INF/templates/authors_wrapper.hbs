	<h2>{{translate 'authors_label'}}</h2>
	<div id="clogAuthorPager">
	<form>
		<img class="first" src="/library/image/silk/control_start_blue.png"/>
		<img class="prev" src="/library/image/silk/control_rewind_blue.png"/>
		<input class="pagedisplay" type="text"/>
		<img class="next" src="/library/image/silk/control_fastforward_blue.png"/>
		<img class="last" src="/library/image/silk/control_end_blue.png"/>
		<select class="pagesize">
			<option selected="selected" value="10">10</option>
			<option value="20">20</option>
			<option value="30">30</option>
			<option value="40">40</option>
			<option value="50">50</option>
		</select>
	</form>
	</div>
    <table id="clog_author_table" cols="4" class="listHier speciallistHier">
		<thead>
		<tr>
			<th width="20%"><div><a href="javascript:;" id="clog-sortbyname">{{translate 'author_label'}}</a></div></th>
			<th width="10%"><div><a href="javascript:;" id="clog-sortbynumberposts">{{translate 'posts'}}</a></div></th>
			<th width="20%"><div><a href="javascript:;" id="clog-sortbylastpost">{{translate 'dateOfLastPostHeader'}}</a></div></th>
			<th width="45%"><div><a href="javascript:;" id="clog-sortbynumbercomments">{{translate 'number_of_comments_label'}}</a></div></th>
			{{#unless onGateway}}<th width="5%"><div>RSS</div></th>{{/unless}}
		</tr>
		</thead>
		<tbody id="clog-authors">
		</tbody>
	</table>
