    <h2>{{translate 'group_posts_title_prefix'}} '{{groupTitle}}'</h2>
	{{#unless posts.length}}
	<div id="noPostsLabel"><span>{{translate 'noPosts'}}</span></div>
	{{else}}
	<div style="clear: left; margin-top: 10px;" id="viewOptions">
   		<input type="checkbox"
                 {{#unless showBody}} checked {{/unless}}
                 onclick="clog.toggleFullContent(this);"/>
		<span>{{translate 'show_title_only_label'}}</span>
   	</div>
	{{/unless}}
    <div id="postsWrapper">
    	<br />
  	 	<div id="posts">
	  	    <table class="tableHeader">
				<tbody>
					{{#each posts}}
					<tr>
						<td>
							<div id="post_{{id}}"></div>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
