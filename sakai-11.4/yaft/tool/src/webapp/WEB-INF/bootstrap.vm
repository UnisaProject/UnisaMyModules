    </thead>
    <tbody>
        {for author in authors}
            <tr><td><a class="profile" href="javascript:;" onClick="switchState('author',{'id':'${author.id}','displayName':'${author.displayName}'});">${author.displayName}</a></td><td>${author.numberOfPosts}</td>{if yaftCurrentDiscussion.graded}<td>{if author.graded}${author.grade.grade}{/if}</td>{/if}</tr>
